<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/output.css" />
    <title><%= pageTitle %></title>
  </head>
  <body
    class="bg-gradient-to-b from-white to-gray-100 min-h-screen flex flex-col"
  >
    <!-- Navbar -->
    <nav class="bg-red-600 text-white p-4 fixed top-0 left-0 w-full shadow-lg">
      <div class="flex items-center justify-between max-w-7xl mx-auto">
        <!-- Logo -->
        <a href="/" class="text-2xl font-bold">Airbnb</a>
        <div class="flex space-x-8">
          <!-- Home Link -->
          <a
            href="/"
            class="py-2 px-6 text-lg font-medium rounded-lg transition duration-300 ease-in-out <%= activeTab === 'home' ? 'text-white bg-red-500' : 'text-white hover:bg-red-700 hover:bg-opacity-50' %>"
          >
            Home
          </a>
          <!-- Add Home Link -->
          <a
            href="/host/add-home"
            class="py-2 px-6 text-lg font-medium rounded-lg transition duration-300 ease-in-out <%= activeTab === 'add-home' ? 'text-white bg-red-500' : 'text-white hover:bg-red-700 hover:bg-opacity-50' %>"
          >
            Add Home
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="flex items-center justify-center flex-grow pt-20">
      <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
        <h1 class="text-3xl font-semibold text-red-500 mb-6 text-center">
          Register Your Home
        </h1>
        <form action="/host/add-home" method="POST" class="space-y-4">
          <div>
            <label for="houseName" class="block text-gray-700 font-medium mb-2">
              House Name
            </label>
            <input
              id="houseName"
              type="text"
              name="houseName"
              placeholder="Enter the name of your house"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
              required
            />
          </div>

          <!-- Price per Night -->
          <div>
            <label for="price" class="block text-gray-700 font-medium mb-2">
              Price per Night ($)
            </label>
            <input
              id="price"
              type="number"
              name="price"
              placeholder="Enter the price per night"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
              required
            />
          </div>

          <!-- Location -->
          <div>
            <label for="location" class="block text-gray-700 font-medium mb-2">
              Location
            </label>
            <input
              id="location"
              type="text"
              name="location"
              placeholder="Enter the location"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
              required
            />
          </div>

          <!-- Rating -->
          <div>
            <label for="rating" class="block text-gray-700 font-medium mb-2">
              Rating (1 to 5)
            </label>
            <input
              id="rating"
              type="number"
              name="rating"
              min="1"
              max="5"
              placeholder="Enter the rating (1 to 5)"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
              required
            />
          </div>

          <!-- Photo URL -->
          <div>
            <label for="photo" class="block text-gray-700 font-medium mb-2">
              Photo URL
            </label>
            <input
              id="photo"
              type="url"
              name="photo"
              placeholder="Enter the URL of the photo"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"
              required
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition duration-300"
          >
            Submit
          </button>
        </form>
      </div>
    </div>
    <!-- Footer -->
    <footer class="bg-gray-800 text-white p-4 text-center">
      <p>Â© 2024 Airbnb. All rights reserved.</p>
    </footer>
  </body>
</html>
