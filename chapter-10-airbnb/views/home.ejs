<%- include('partials/head') %>
  </head>
  <body
    class="bg-gradient-to-b from-white to-gray-100 min-h-screen flex flex-col"
  >
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <!-- Main Content -->
    <div class="flex items-center justify-center flex-grow pt-20">
      <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-7xl">
        <h1 class="text-4xl font-semibold text-red-500 mb-6 text-center">
          Here are our registered Homes
        </h1>

        <!-- Home Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach(home => { %>
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <img
              src="<%= home.photo %>"
              alt="<%= home.houseName %>"
              class="w-full h-40 object-cover rounded-lg mb-4"
            />
            <h2 class="text-xl font-semibold text-gray-800 mb-2">
              <%= home.houseName %>
            </h2>
            <p class="text-gray-600 mb-2">Location: <%= home.location %></p>
            <p class="text-gray-600 mb-2">Price per night: Rs.<%= home.price %></p>
            <p class="text-gray-600 mb-2">Rating: <%= home.rating %> / 5</p>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <%- include('partials/footer') %>
  </body>
</html>
